    <Script type="xscript5.1"><![CDATA[this.webviewer_onload = function (obj:Form, e:nexacro.LoadEventInfo)
{	
	var webRootURL = "";
	var viewerPage = "service/blank.html";
	//var sUrl = nexacro.getApplication().xadl;
	var sUrl = nexacro.getApplication().webRootURL;

	if (sUrl.indexOf("http") != -1)
	{
		sUrl = sUrl.substr(0, sUrl.lastIndexOf("/") + 1);
		webRootURL = sUrl;
	}

	this.divBase.form.WebBrowser00.set_url(webRootURL + viewerPage);
};

this.divBase_WebBrowser00_onloadcompleted = function(obj:nexacro.WebBrowser,e:nexacro.WebLoadCompEventInfo)
{
	var body = this.divBase.form.WebBrowser00.getProperty("document").getProperty("body");
	var data = this.ds_List.getColumn(0, "NTT_CNTS");   
	body.setProperty("innerHTML", data);	
};

this.btnSource_onclick = function (obj:Button, e:nexacro.ClickEventInfo)
{
	this.btnHTML.set_enable(true);
	this.divBase.form.divSource.set_visible(true);
	this.divBase.form.WebBrowser00.set_visible(false);
	this.btnSource.set_enable(false);
};

this.btnHTML_onclick = function (obj:Button, e:nexacro.ClickEventInfo)
{
	this.btnHTML.set_enable(false);
	this.divBase.form.divSource.set_visible(false);
	this.divBase.form.WebBrowser00.set_visible(true);
	this.btnSource.set_enable(true);
};

this.ds_List_onrowposchanged = function (obj:Dataset, e:nexacro.DSRowPosChangeEventInfo)
{
	if( this.divBase.form.WebBrowser00.getProperty("document"))
	{
		var body = this.divBase.form.WebBrowser00.getProperty("document").getProperty("body");
		var data = this.ds_List.getColumn(e.newrow, "NTT_CNTS");   
		body.setProperty("innerHTML", data);
	}
};]]></Script>
